{
  "version": "1.0.0",
  "tokens": {
    "pause-intent": {
      "category": "boundary",
      "pattern": "confirmation-modal",
      "description": "Adds a brief pause before a high-impact action (e.g., checkout).",
      "defaults": { "delaySeconds": 2, "requireReconfirmText": true }
    },
    "consent-gate": {
      "category": "boundary",
      "pattern": "explicit-opt-in",
      "description": "Clear yes/no with reversible choice; no dark patterns.",
      "defaults": { "undoWindowMinutes": 30 }
    },
    "session-timeout": {
      "category": "boundary",
      "pattern": "usage-timer",
      "description": "Nudges when session exceeds user-defined threshold.",
      "defaults": { "thresholdMinutes": 30, "snoozeMinutes": 10 }
    },
    "values-check": {
      "category": "agency",
      "pattern": "prompt",
      "description": "Asks ‘Does this align with your goals?’ before big choices.",
      "defaults": { "showOnTransactionsAbove": 50 }
    },
    "goal-marker": {
      "category": "agency",
      "pattern": "progress-tie",
      "description": "Anchors actions to longer-term goals (e.g., saving vs spending).",
      "defaults": { "goalSource": "user-profile" }
    },
    "custom-mode": {
      "category": "agency",
      "pattern": "toggle",
      "description": "Switch between ‘flow’ (fast) and ‘reflect’ (paced) modes.",
      "defaults": { "modes": ["flow", "reflect"], "defaultMode": "reflect" }
    },
